<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cn.edu.sustech.cs209.chatting.client.Controller">
   <Label alignment="CENTER" maxWidth="2000.0" prefHeight="22.0" text="null">
      <font>
         <Font name="System Bold" size="16.0" />
      </font>
   </Label>
    <MenuBar VBox.vgrow="NEVER">
        <Menu mnemonicParsing="false" text="New Chat">
            <MenuItem mnemonicParsing="false" onAction="#createPrivateChat" text="New Private Chat" />
            <MenuItem mnemonicParsing="false" onAction="#createGroupChat" text="New Group Chat" />
        </Menu>
    </MenuBar>
    <SplitPane dividerPositions="0.25" focusTraversable="true" VBox.vgrow="ALWAYS">
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label text="my chat" />
            <ListView prefHeight="300.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
            <Label text="online users" />
             <ListView fx:id="chatList" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
        <SplitPane dividerPositions="0.85" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0">
            <ListView fx:id="chatContentList" prefHeight="200.0" prefWidth="200.0" />
            <HBox prefHeight="100.0" prefWidth="200.0">
                <TextArea fx:id="inputArea" prefHeight="138.0" prefWidth="500.0" HBox.hgrow="ALWAYS" />
                <Button maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#doSendMessage" text="send" HBox.hgrow="ALWAYS" />
                <Button maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#doSendMessage" text="emoji" HBox.hgrow="ALWAYS" />
                <Button maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#doSendMessage" text="files" HBox.hgrow="ALWAYS" />
            </HBox>
        </SplitPane>
    </SplitPane>
    <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="NEVER">
        <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
        </padding>
        <Label fx:id="currentUsername" maxHeight="1.7976931348623157E308" text="Current User: " HBox.hgrow="ALWAYS">
            <font>
                <Font size="11.0" fx:id="x3" />
            </font>
            <textFill>
                <Color red="0.625" green="0.625" blue="0.625" fx:id="x4" />
            </textFill>
        </Label>
      <Label text="null" />
        <Pane HBox.hgrow="ALWAYS" />
        <Label fx:id="currentOnlineCnt" font="$x3" text="Online: " textFill="$x4" HBox.hgrow="NEVER" />
      <Label text="0" />
    </HBox>
</VBox>
